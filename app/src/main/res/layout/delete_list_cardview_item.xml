<?xml version="1.0" encoding="utf-8"?>
<com.library.ironwill.expensekeeper.view.MaterialDelete.ParticleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/delete_card_layout"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="17dp"
    android:layout_marginRight="17dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stateListAnimator="@drawable/card_raise"
        app:cardCornerRadius="5dp"
        app:elevation="4dp">

        <RelativeLayout
            android:id="@+id/base_swipe_item_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/category_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="center"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/category_icon"
                android:text="FreeLancing"
                android:textColor="@color/gray_b1"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/category_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="27dp"
                android:text="$200"
                android:textColor="@color/forestGreen"
                android:textSize="21sp" />

            <ImageView
                android:id="@+id/category_color"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/green_rect" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

